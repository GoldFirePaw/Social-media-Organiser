datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Idea {
  id          String      @id @default(uuid())
  title       String
  description String?
  platform    Platform
  status      IdeaStatus  @default(IDEA)
  difficulty  Int         @default(2)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  scheduledPosts ScheduledPost[] @relation("IdeaToScheduledPost")
}

enum Platform {
  BOOKTOK
  DEVTOK
}

enum IdeaStatus {
  IDEA
  PLANNED
  DONE
}

model ScheduledPost {
  id          String              @id @default(uuid())
  date        DateTime
  description String?
  status      ScheduledPostStatus @default(NOT_STARTED)

  ideaId      String
  idea        Idea                @relation("IdeaToScheduledPost", fields: [ideaId], references: [id], onDelete: Cascade)

  createdAt   DateTime            @default(now())

  @@unique([date, ideaId])
}

enum ScheduledPostStatus {
  NOT_STARTED
  PREPARING
  READY
  POSTED
}
